<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:padding="20dp">
    <EditText android:id="@+id/u" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Usuario" />
    <EditText android:id="@+id/p" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Clave" android:inputType="textPassword" />
    <Button android:id="@+id/btn" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Ingresar" />
</LinearLayout>